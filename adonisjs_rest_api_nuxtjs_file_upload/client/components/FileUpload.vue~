<template>
  <v-container
    grid-list-md
    text-xs-center
    fill-height>
    <v-layout
      row
      wrap
      align-center>
      <v-flex
        xs6
        offset-xs3>
        <v-text-field
          v-model="fichier"
          name="photo"
          outline
          background-color="blue"
          color="blue"
          label="Select image"
          append-icon="attach_file"
          @click="selectImage"/>
        <input
          ref="image"
          class="hide-input"
          type="file"
          accept="image/*"
          @change="imageSelected">
        <v-btn
          class="upload-button"
          color="indigo"
          @click="upload_photo">
          Upload
          <v-icon
            left
            color="white">
            cloud_upload
          </v-icon>
        </v-btn>
      </v-flex>
    </v-layout>
  </v-container>
</template>

<script>
export default {
  name: 'FileUpload',
  data: () =>({
    photo: '',
    fichier: ''
  }),
  methods: {
    selectImage() {
      this.photo = this.$refs.image.click()
    },
    imageSelected(e) {
      this.$emit('input', e.target.files[0])
      this.photo = this.$refs.image.files[0]
      this.fichier = this.photo.name
    },
    async upload_photo() {
      console.log(this.photo)
      let fd = new FormData()
      fd.append('file',  this.photo)
      let donnees = {hello: 'salut'}
      let url = 'http://127.0.0.1:3333/upload'
      let config = {
	headers: {
          'content-type': 'multipart/form-data'
	}
      }
      // await this.$axios.$post(url, fd,  config)
      await this.$axios({
      	method: 'post',
      	url: url,
      	data:  fd,
      	config: {headers: {'Content-Type': 'multipart/form-data' }}
      })
      
    }
  }
}
</script>

<style scoped>
.hide-input {
    display: none;
}
*{
    text-transform: none !important;
}
.upload-button {
    border-radius: 50px;
    color: white;
}
</style>
